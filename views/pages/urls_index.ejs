<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body class="container">

    <header>
      <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">
          <h1 class="text-center">Your short URLs</h1>
          <br>
          <div>
            <ul>
                <% urls.forEach(function(url) { %>
                    <li><%= url.shortURL %> - <%= url.longURL %></li>
                    <br>
                     <a href="/urls/<%= url.shortURL %>/edit"><button class="btn-link btn-outline-secondary" type="submit">Edit</button></a>
                     <form method="POST" action="/urls/<%= url.shortURL %>?_method=DELETE"><button class="btn btn-outline-danger" type="submit">Delete  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></form>
                     <br>
                <% }); %>
            </ul>
          </div>
          <br>
          <div class="text-center">
            <a href="urls/new"><button class="btn btn-primary btn-lg" type="submit">Add new URL</button></a>
          </div>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>

</body>
</html>






